{% extends "template.kmphtml.twig" %}
{% block title %}Type d'Opération | Trajectoire{% endblock %}
{% block contenu %}
{% block chargement %}{% endblock %}

<div class="pd-20 card-box mb-30">
    <div class="clearfix">
        <div class="pull-left">
            <h4 class="text-blue h4">Ajouter une Opération</h4>
        </div>
    </div>
    <hr>
    {% if message == 'success' %}
        <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
            <i class="fa fa-check fa-2x" style="font-size: 16"></i> {{ message_success }}
        </div>
    {% elseif message == 'echecc' %}
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
            <i class="fa fa-close fa-2x" style="font-size: 16"></i> {{ message_echec }}
        </div>

    {% elseif message == 'echec' %}

        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
            <i class="fa fa-close fa-2x" style="font-size: 16"></i> {{ add_exit }}
        </div

    {% endif %}
    <hr>
    <form method='post' enctype="multipart/form-data">

        <div class='row'>
            <div class='col-6'>
                <div class="form-group">
                    <label>Type d'Opération</label>
                    <input class="form-control" required='required' name='nomtypeope'  type="text" placeholder="Entrez le nom svp!">
                </div>
            </div>
            <div class='col-6'>
                <div class="form-group">
                    <label>Descriptions</label>
                    <textarea class="form-control" required='required' name='descr'  placeholder="Entrez la description de l'opération"></textarea>
                </div>
            </div>
        </div>

        <button type="submit" name='enregistre' class="btn btn-success btn-lg btn-block"> Enregistrer</button>
    </form>
</div>
<!-- Simple Datatable start -->
<div class="card-box mb-30">
    <hr>
    {% if messages == 'del' %}
        <div class="alert alert-success" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
            <i class="fa fa-check fa-2x" style="font-size: 16"></i> {{ message_sup }}
        </div>
    {% elseif messages == 'nodel' %}
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span></button>
            <i class="fa fa-close fa-2x" style="font-size: 16"></i> {{ message_no_sup }}
        </div>
    {% endif %}
    <hr>
    <div class="pd-20">
        <h4 class="text-blue h4">Table des Type d'Opération</h4>
    </div>
    <div class="pb-20 table-responsive">
        <table class="data-table table stripe hover nowrap">
            <thead>
                <tr>
                    <th>Type d'opération</th>
                    <th>Descriptions</th>
                    <th class="datatable-nosort">Action</th>
                </tr>
            </thead>
            <tbody>
                {% for select_type in select_types %}
                    <tr>
                        <td>{{select_type.NomType}}</td>
                        <td>{{select_type.DescType}}</td>
                        <td>
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                    <i class="dw dw-more"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                    <a class="dropdown-item" href="edit_operation?edit={{select_type.IdType}}"><i class="dw dw-edit2"></i> Edit</a>
                                    <a class="dropdown-item" href="?del={{select_type.IdType}}"><i class="dw dw-delete-3"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<!-- Simple Datatable End -->

{% endblock %}